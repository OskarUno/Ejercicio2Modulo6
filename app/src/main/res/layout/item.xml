<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#302C2C">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvCantidad"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="2dp"
                android:gravity="center_vertical"
                android:text="Cant"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvNombre"
                app:layout_constraintStart_toEndOf="@+id/tvNombre"
                app:layout_constraintTop_toTopOf="@+id/tvNombre" />

            <TextView
                android:id="@+id/tvTotal"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginStart="2dp"
                android:gravity="center_vertical"
                android:text="Total"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvNombre"
                app:layout_constraintStart_toEndOf="@+id/tvPrecio"
                app:layout_constraintTop_toTopOf="@+id/tvNombre" />

            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_marginStart="3dp"
                android:gravity="center_vertical"
                android:text="Articulo"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvPrecio"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginStart="2dp"
                android:gravity="center_vertical"
                android:text="P.Unitario"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvNombre"
                app:layout_constraintStart_toEndOf="@+id/tvCantidad"
                app:layout_constraintTop_toTopOf="@+id/tvNombre" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>